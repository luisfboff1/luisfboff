RewriteEngine On

# Remover .html das URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirecionar páginas específicas para URLs mais limpas
RewriteRule ^inicio/?$ index.html [NC,L]
RewriteRule ^sobre/?$ sobre.html [NC,L]
RewriteRule ^dev/?$ desenvolvimento.html [NC,L]
RewriteRule ^solar/?$ energia-solar.html [NC,L]
RewriteRule ^datascience/?$ ciencia-dados.html [NC,L]

# Redirecionar index.html para raiz
RewriteRule ^index\.html$ / [R=301,L]

# Redirecionar páginas antigas para novas URLs
RewriteRule ^desenvolvimento\.html$ /dev [R=301,L]
RewriteRule ^energia-solar\.html$ /solar [R=301,L]
RewriteRule ^ciencia-dados\.html$ /datascience [R=301,L]
RewriteRule ^sobre\.html$ /sobre [R=301,L]
